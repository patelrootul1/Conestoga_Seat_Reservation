        </Label>
        <Button Grid.Row="4" Grid.Column="4"  Background="Pink" Foreground="Black"  Height="30" Width="80" FontSize="20" Content="Save"
                HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30 15 0 0" Name="serialize" Click="serialize_Click" />
        <Button Grid.Row="4" Grid.Column="4"  Background="Pink" Foreground="Black"  Height="30" Width="80" FontSize="20" Content="Load"
                HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 15 30 0" Name="deserialize" Click="deserialize_Click" />
        
        

