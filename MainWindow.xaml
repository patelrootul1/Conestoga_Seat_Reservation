                HorizontalAlignment="Center" VerticalAlignment="Top" Name="reserve" Click="reserve_Click"/>
        <Button Grid.Row="2" Grid.Column="4"  Background="Red" Foreground="Black"  Height="30" Width="150" FontSize="20" Content="Delete"
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 15 0 0" Name="delete" Click="delete_Click"/>
        <Button Grid.Row="3" Grid.Column="4"  Background="Orange" Foreground="Green"  Height="30" Width="150" FontSize="20" Content="Clear"
                HorizontalAlignment="Center" VerticalAlignment="Top" Name="clear" Click="clear_Click"/>
        <Button Grid.Row="3" Grid.Column="4"  Background="Violet" Foreground="Black"  Height="30" Width="80" FontSize="20" Content="LINQ #1"
                HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0 15 0 0" Name="linq1" Click="linq1_Click"/>
        <Button Grid.Row="3" Grid.Column="4"  Background="Violet" Foreground="Black"  Height="30" Width="80" FontSize="20" Content="LINQ #2"
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 15 0 0" Name="linq2" Click="linq2_Click"/>
