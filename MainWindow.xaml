        <Label Grid.Row="1" Grid.Column="4" Content="Enter Your Name:"  Margin="5 20 10 0"></Label>
        <TextBox Grid.Row="1" Grid.Column="4" Background="White" Height="20" Name="NameTextbox" Width="150" Margin="110 -17 10 0"></TextBox>
        <Label Grid.Row="1" Grid.Column="4" Content="Select Seat Number:" Margin="5 50 10 0"></Label>
        <ComboBox Grid.Row="1" Foreground="Black" Grid.Column="4" Width="110" Height="20" Margin="90 40 0 0" Name="SeatCombo"  SelectionChanged="SeatCombo_SelectionChanged">
            <ComboBoxItem Content="Choose Below" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            <ComboBoxItem Content="A1" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            <ComboBoxItem Content="A2" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            <ComboBoxItem Content="A3" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            <ComboBoxItem Content="A4" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            <ComboBoxItem Content="B1" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            <ComboBoxItem Content="B2" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            <ComboBoxItem Content="B3" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            <ComboBoxItem Content="B4" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            <ComboBoxItem Content="C1" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            <ComboBoxItem Content="C2" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            <ComboBoxItem Content="C3" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
            <ComboBoxItem Content="C4" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
